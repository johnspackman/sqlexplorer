<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="net.sourceforge.sqlexplorer"
   name="SQLExplorer Plugin"
   version="2.2.5"
   provider-name="Alexandre L Telles"
   class="net.sourceforge.sqlexplorer.plugin.SQLExplorerPlugin">

   <runtime>
      <library name="sqlexplorer.jar">
         <export name="*"/>
      </library>
      <library name="lib/commons-logging.jar">
         <export name="*"/>
      </library>
      <library name="lib/fw-1.2beta6.jar">
         <export name="*"/>
      </library>
      <library name="lib/log4j.jar">
         <export name="*"/>
      </library>
      <library name="lib/nanoxml.jar">
         <export name="*"/>
      </library>
      <library name="lib/rowset.jar">
         <export name="*"/>
      </library>
   </runtime>
   <requires>
      <import plugin="org.eclipse.core.runtime.compatibility"/>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.ui.ide"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.swt"/>
      <import plugin="org.eclipse.ui.editors"/>
      <import plugin="org.eclipse.ui.views"/>
      <import plugin="org.eclipse.ui.workbench"/>
      <import plugin="org.eclipse.ui.workbench.texteditor"/>
      <import plugin="org.eclipse.jface"/>
      <import plugin="org.eclipse.text"/>
      <import plugin="org.eclipse.jface.text"/>
      <import plugin="org.eclipse.gef"/>
   </requires>


   <extension
         point="org.eclipse.ui.views">
      <category
            name="SQL Explorer"
            id="SQLExplorerPlugin">
      </category>
      <view
            name="SQL Results"
            icon="icons/common_tab.gif"
            category="SQLExplorerPlugin"
            class="net.sourceforge.sqlexplorer.plugin.views.SqlResultsView"
            id="net.sourceforge.sqlexplorer.plugin.views.SqlResultsView">
      </view>
      <view
            name="SQL History"
            icon="icons/history_list.gif"
            category="SQLExplorerPlugin"
            class="net.sourceforge.sqlexplorer.plugin.views.SQLHistoryView"
            id="net.sourceforge.sqlexplorer.plugin.views.SQLHistoryView">
      </view>
      <view
            name="Connection Info"
            icon="icons/app_obj.gif"
            category="SQLExplorerPlugin"
            class="net.sourceforge.sqlexplorer.plugin.views.ConnectionInfo"
            id="net.sourceforge.sqlexplorer.plugin.views.ConnectionInfo">
      </view>
      <view
            name="Connections"
            icon="icons/connections_view.gif"
            category="SQLExplorerPlugin"
            class="net.sourceforge.sqlexplorer.plugin.views.ConnectionsView"
            id="net.sourceforge.sqlexplorer.plugin.views.ConnectionsView">
      </view>
      <view
            name="Database Structure View"
            icon="icons/tree_mode.gif"
            category="SQLExplorerPlugin"
            class="net.sourceforge.sqlexplorer.plugin.views.DBView"
            id="net.sourceforge.sqlexplorer.plugin.views.DBView">
      </view>
      <view
            name="Drivers "
            icon="icons/feature_obj.gif"
            category="SQLExplorerPlugin"
            class="net.sourceforge.sqlexplorer.plugin.views.DriverView"
            id="net.sourceforge.sqlexplorer.plugin.views.DriverView">
      </view>
      <view
            name="Aliases"
            icon="icons/alias.gif"
            category="SQLExplorerPlugin"
            class="net.sourceforge.sqlexplorer.plugin.views.AliasView"
            id="net.sourceforge.sqlexplorer.plugin.views.AliasView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="SQL Explorer"
            icon="icons/perspective_icon.gif"
            class="net.sourceforge.sqlexplorer.plugin.perspectives.SQLExplorerPluginPerspective"
            id="net.sourceforge.sqlexplorer.plugin.perspectives.SQLExplorerPluginPerspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            name="SQL Explorer"
            class="net.sourceforge.sqlexplorer.preferences.GeneralPreferencePage"
            id="net.sourceforge.sqlexplorer.preferences.GeneralPreferencePage">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            name="SQL Editor"
            category="net.sourceforge.sqlexplorer.preferences.GeneralPreferencePage"
            class="net.sourceforge.sqlexplorer.preferences.SQLPreferencePage"
            id="net.sourceforge.sqlexplorer.preferences.SQLPreferencePage">
      </page>
   </extension>
   <extension
         id="editors"
         point="org.eclipse.ui.editors">
      <editor
            default="true"
            name="Sql Editor"
            extensions="sql"
            icon="icons/editor.gif"
            class="net.sourceforge.sqlexplorer.plugin.editors.SQLEditor"
            contributorClass="net.sourceforge.sqlexplorer.plugin.editors.SQLEditorActionContributor"
            id="net.sourceforge.sqlexplorer.plugin.editors.SQLEditor">
      </editor>
      <editor
            name="Schema Viewer"
            extensions="sqls"
            icon="icons/edittsk_tsk.gif"
            class="net.sourceforge.sqlexplorer.gef.editors.SchemaEditor"
            contributorClass="net.sourceforge.sqlexplorer.gef.editors.SchemaViewerActionBarContributor"
            id="net.sourceforge.sqlexplorer.gef.editors.SchemaEditor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.viewActions">     
      <viewContribution
            targetID="net.sourceforge.sqlexplorer.plugin.views.ConnectionsView"
            id="net.sourceforge.sqlexplorer.plugin.views.ConnectionsView.rollback">
         <action
               class="net.sourceforge.sqlexplorer.sessiontree.actions.Rollback"
               disabledIcon="icons/rollback_dis.gif"
               enablesFor="1"
               icon="icons/rollback.gif"
               id="net.sourceforge.sqlexplorer.actions.rollback"
               label="Roll Back"
               toolbarPath="additions"
               tooltip="Rollback">
         </action>
      </viewContribution>
      <viewContribution
            targetID="net.sourceforge.sqlexplorer.plugin.views.ConnectionsView"
            id="net.sourceforge.sqlexplorer.plugin.views.ConnectionsView.commit">
         <action
               class="net.sourceforge.sqlexplorer.sessiontree.actions.Commit"
               disabledIcon="icons/commit_dis.gif"
               enablesFor="1"
               icon="icons/commit.gif"
               id="net.sourceforge.sqlexplorer.actions.commit"
               label="Commit"
               toolbarPath="additions"
               tooltip="Commit">
         </action>
      </viewContribution>
      <viewContribution
            targetID="net.sourceforge.sqlexplorer.plugin.views.ConnectionsView"
            id="net.sourceforge.sqlexplorer.plugin.views.ConnectionsView.closeAll">
         <action
               class="net.sourceforge.sqlexplorer.sessiontree.actions.CloseAllConnections"
               disabledIcon="icons/removeall_dis.gif"
               enablesFor="1"
               icon="icons/removeAll_co.gif"
               id="net.sourceforge.sqlexplorer.actions.closeAll"
               label="Close All Connections"
               toolbarPath="additions"
               tooltip="Close All Connections">
            <selection
                  name="*"
                  class="SessionTreeNode">
            </selection>
         </action>
      </viewContribution>
      <viewContribution
            targetID="net.sourceforge.sqlexplorer.plugin.views.ConnectionsView"
            id="net.sourceforge.sqlexplorer.plugin.views.ConnectionsView.close">
         <action
               class="net.sourceforge.sqlexplorer.sessiontree.actions.CloseConnection"
               disabledIcon="icons/remove_dis.gif"
               enablesFor="1"
               icon="icons/remove_att.gif"
               id="net.sourceforge.sqlexplorer.actions.close"
               label="Close Connection"
               toolbarPath="additions"
               tooltip="Close Connection">
            <selection
                  name="*"
                  class="SessionTreeNode">
            </selection>
         </action>
      </viewContribution>

      <viewContribution
            targetID="net.sourceforge.sqlexplorer.plugin.views.ConnectionsView"
            id="net.sourceforge.sqlexplorer.plugin.views.ConnectionsView.NewEditor">
         <action
               label="New SQL Editor"
               icon="icons/new_editor.gif"
               class="net.sourceforge.sqlexplorer.sessiontree.actions.NewSQLEditor"
               tooltip="New SQL Editor"
               enablesFor="*"
               toolbarPath="additions"
               id="net.sourceforge.sqlexplorer.actions.newEditor">
         </action>
      </viewContribution>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            name="SQLExplorer"
            id="net.sourceforge.sqlexplorer.new">
      </category>
      <wizard
            name="SQLExplorer SQL Editor"
            icon="icons/edittsk_tsk.gif"
            category="net.sourceforge.sqlexplorer.new"
            class="net.sourceforge.sqlexplorer.plugin.wizards.NewSQLEditorWizard"
            id="net.sourceforge.sqlexplorer.plugin.wizards.sqleditor">
         <description>
            Create a new empty SQL file
         </description>
         <selection
               class="org.eclipse.core.resources.IResource">
         </selection>
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
	<actionSet
		label="About SQL Explorer"
		visible="true"
		id="net.sourceforge.sqlexplorer.about">
		<action
        class="net.sourceforge.sqlexplorer.plugin.actions.About"
        icon="icons/perspective_icon.gif"
        id="org.eclipse.ui.cheatsheets.actions.CheatSheetHelpMenuAction"
        label="About SQL Explorer"
        menubarPath="help/about">
		</action>
	</actionSet>
   </extension>
</plugin>
